<%- include('../../base/includes/head', {pageTitle:'Login'}) %>

    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">

    </head>

    <body>
        <%- include('../../base/includes/header') %>
            <main>
                <h1>User Login</h1>

                <% if(inputData.errorMessage){ %>
                    <section class="alert">
                        <h2>Invalid Credentials Info</h2>
                        <p>
                            <%= inputData.errorMessage %>
                        </p>
                    </section>
                    <% } %>

                <form action="/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                    <p>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
                    </p>
                  
                    <p>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
                    </p>
                    <hr>
                    <button class="btn">Login</button>
                    <p id="switch-form"><a href="/signup">Sign a new user</a></p>

                </form>
            </main>
            <%- include('../../base/includes/footer') %>