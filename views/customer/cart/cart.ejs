<%- include('../../base/includes/head', {pageTitle:'Cart'}) %>
    <link rel="stylesheet" href="/styles/cart.css">

    </head>

    <body>
        <%- include('../../base/includes/header') %>
            <main>
                <h1>Cart</h1>
                <ul id="cart-itmes">
                    
                    <%  for (const cartItem of locals.cart.items) { %>
                    <li>
                        <%- include('includes/cart-item', {item:cartItem}) %>
                    </li>
                     <% } %>
                </ul>
                        <div id="cart-total">
                            <p>Total : RM <%= locals.cart.totalPrice.toFixed(2) %></p>
                        
                            <button class="btn"> Buy Products </button>
                        </div>
            </main>
            <%- include('../../base/includes/footer') %>